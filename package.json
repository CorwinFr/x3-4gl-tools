{
  "name": "x3-4gl-tools",
  "displayName": "X3 4GL Tools",
  "description": "Sage X3 4GL (L4G) development tools for Visual Studio Code, featuring syntax highlighting, code snippets, and other enhancements to streamline your workflow.",
  "version": "1.0.1",
  "publisher": "GuillaumeCLEMENT", 
  "icon": "images/logo.png",
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CorwinFr/x3-4gl-tools.git"
  },
  "contributes": {
    "languages": [{
      "id": "x3-4gl",
      "aliases": ["Sage X3 4GL", "x3-4gl"],
      "extensions": [".src",".trt"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "x3-4gl",
      "scopeName": "source.x3-4gl",
      "path": "./syntaxes/x3-4gl.tmLanguage.json"
    }]
  }
}
